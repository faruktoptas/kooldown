<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_padding"
        tools:context=".MainActivity">


    <me.toptas.kooldown.Kooldown android:layout_width="@dimen/default_w"
                                 android:id="@+id/kd"
                                 app:kd_activeColor="@color/colorAccent"
                                 app:kd_duration="3000"
                                 app:kd_inactiveColor="#999999"
                                 app:kd_startAngle="90"
                                 app:kd_progress="360"
                                 android:layout_marginBottom="@dimen/default_padding"
                                 android:background="#ffffff"
                                 app:kd_autoStart="false"
                                 app:kd_strokeWidth="12"
                                 android:layout_height="@dimen/default_w"/>

    <me.toptas.kooldown.Kooldown android:layout_width="@dimen/default_w"
                                 android:id="@+id/kd2"
                                 app:kd_activeColor="@android:color/holo_blue_light"
                                 app:kd_duration="4000"
                                 app:kd_startAngle="0"
                                 app:kd_inactiveColor="@android:color/holo_orange_dark"
                                 android:layout_marginBottom="@dimen/default_padding"
                                 app:kd_autoStart="true"
                                 app:kd_progress="270"
                                 app:kd_strokeWidth="20"
                                 android:layout_height="@dimen/default_w"/>


    <me.toptas.kooldown.Kooldown android:layout_width="@dimen/default_w"
                                 android:id="@+id/kd3"
                                 android:layout_marginBottom="10dp"
                                 android:layout_height="@dimen/default_w"/>


</LinearLayout>